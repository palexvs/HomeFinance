<div class="span10">

<h2>Transaction's list</h2>

<%= link_to "New", new_transaction_path, :class=>"btn" %>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Date</th>
			<th>Description</th>
			<th>Amount</th>
			<th>Type</th>
			<th>Account</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @transactions.each do |transaction| %>
		<tr id="<%= dom_id(transaction) %>">
			<td><%= transaction.date %></td>
			<td><%= transaction.text %></td>
			<td><%= transaction.amount.to_f / 100 %></td>
			<td><%= transaction.transaction_type.name %></td>
			<td><%= transaction.account.name %></td>					
			<td>
				<div class="btn-group">
					<%= link_to "Show", transaction, :class => "btn" %>					
					<%= link_to "Edit", edit_transaction_path(transaction), :class => "btn" %>
					<%= link_to "Delete", transaction, data: {confirm: 'Are you sure?'}, :class => "btn", :method => :delete, :remote => true, "data-type" => :json %>
				</div>
			</td
		</tr>
		<% end %>
	</tbody>
</table>

<% if @transactions.empty? %> 
	<em>No transactions</em>
<% end %>
<br />

</div>

<div class="span2">
<%= render "balance_widget" %>
</div> 