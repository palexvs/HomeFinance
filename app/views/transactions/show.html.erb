<h2>Transaction <% @transaction.id %></h2>

<%= form_for @transaction, :html => { :class => "form-horizontal"} do |f| %>
  <div class="control-group">
    <%= f.label :date, :class=>"control-label" %>
    <div class="controls"><%= f.text_field :date, :readonly => true, :class => "input-xlarge" %></div>
  </div>
  <div class="control-group">
    <%= f.label :text, :class=>"control-label" %>
    <div class="controls"><%= f.text_field :text, :readonly => true, :class => "input-xlarge" %></div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class=>"control-label" %>
    <div class="controls"><%= f.text_field :amount, :value => @transaction.amount.to_f / 100, :readonly => true, :class => "input-xlarge" %></div>
  </div>

  <div class="control-group">
    <%= f.label :transaction_type_id, "Type", :class=>"control-label" %>
    <div class="controls"><%= f.text_field :transaction_type_id, :value => @transaction.transaction_type_name, :readonly => true, :class => "input-xlarge" %></div>
  </div>

  <div class="control-group">
    <%= f.label :account_id, "Account", :class=>"control-label" %>
    <div class="controls"><%= f.text_field :account_id, :value => @transaction.account_name, :readonly => true, :class => "input-xlarge" %></div>
  </div>
<% end %>

<%= link_to "Show list", root_path, :class=>"btn" %>