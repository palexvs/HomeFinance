  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Account</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

  <%= render partial: 'transaction', :collection => @transactions, 
    :locals => { accounts_list: accounts.map{ |u| [u.id, "#{u.balance.currency.symbol} #{u.name}"]}, categories: categories } %>

  </tbody>
</table>