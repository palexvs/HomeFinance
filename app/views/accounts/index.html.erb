<%= link_to "Transaction's list", transactions_path %>
<h2>Listing accounts</h2>

<table class="table table-striped table-bordered table-condensed">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>Description</th>
	    <th>Currency</th>
	    <th></th>
	  </tr>
  	</thead>
	<tbody>
	<% @accounts.each do |account| %>
	  <tr>
	    <td><%= account.name %></td>
	    <td><%= account.description %></td>
	    <td><%= account.currency %></td>
	    <td><div class="btn-group">
	    	<%= link_to 'Show', account, :class => "btn" %>
	    	<%= link_to 'Edit', edit_account_path(account), :class => "btn" %>
	    	<%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete, :class => "btn" %>
	    </div></td>
	  </tr>
	<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Account', new_account_path, :class => 'btn' %>
