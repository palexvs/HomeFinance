<h1>Login/Resgister</h1>
<%= simple_form_for(@user, url: sessions_path) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.submit 'Login', :class=>"btn btn-primary", :onclick=> '$("form#new_user").attr("action", "/sessions")' %>
  or 
  <%= f.submit "Register",:class=>"btn btn-success", :onclick=> '$("form#new_user").attr("action", "/users")' %>
<% end %>
